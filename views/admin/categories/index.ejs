<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-success" href="/admin/categories/new">criar uma categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Acões</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
            <tr>
                <th><%= category.id %></th>
                <th><%= category.title %></th>
                <th><%= category.slug %></th>
                <th>
                    <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                    <form  method="POST" action="/categories/delete" style ="display:inline" onsubmit="confirmarDelecao(event,this)"> 
                        <input type="hidden" name= "id" value="<%= category.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>

                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer.ejs') %>

<script>

function confirmarDelecao(event,form){

event.preventDefault();
    console.log("o formulario não foi enviado");
    var decision = confirm("Você quer deletar essa categoria");

    if (decision){
        console.log("Eu escolhi deletar!")
        form.submit();
    }else{
        console.log("Eu não escolhi deletar")

    }

}

</script>